#!/usr/bin/env ruby

begin
  require 'optparse'
  require 'chart'
  require 'irb'
  require 'shellwords'

  options = Chart.options(
    :mode => :console,
  )
  OptionParser.new do |opts|
    opts.banner = %{
usage: chart-console [options]

  Gives you a console with the cql connection set up as normal.

    $ chart-console
    > conn.exec("select * from charts")
    ...

options:

}.lstrip

    opts.on("-e", "--exec QUERY", "execute query") do |value|
      options[:mode] = value
    end

    opts.on("-h", "--help", "print this help") do
      puts opts
      puts
      puts Chart.version
      exit
    end

    opts.on("-p", "--print-cqlsh", "print cqlsh command") do
      options[:mode] = :print_cqlsh
    end

    opts.on("-q", "--cqlsh", "launch cqlsh with argv") do
      options[:mode] = :cqlsh
    end

    opts.on("--version", "print version information") do |node|
      puts Chart.version
      exit
    end
  end.parse!

  Chart.setup(options)

  def conn
    Chart.conn
  end

  def config
    Chart.config
  end

  mode = options[:mode]
  case mode
  when :console
    ARGV.clear
    IRB.start(__FILE__)

  when :cqlsh, :print_cqlsh
    # don't use port as it is... maybe a different protocol? needs to be 9160
    command = ["cqlsh", config[:hosts][0], "-k", config[:keyspace]]
    command = command.map(&:to_s)
    command = Shellwords.shelljoin(command + ARGV)

    if mode == :print_cqlsh
      puts command
    else
      exec command
    end

  else
    rows = conn.execute(mode)
    rows.each {|row| puts row }
  end
end
