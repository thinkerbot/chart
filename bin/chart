#!/usr/bin/env ruby
begin
  require 'optparse'
  require 'chart'
  require 'json'

  options = {
  }
  OptionParser.new do |opts|
    opts.banner = %{
usage: chart [options] FILES...

  Create d3 charts from data files.

options:

}.lstrip

    opts.on("-h", "--help", "print this help") do
      puts opts
      puts
      puts Chart.version
      exit
    end
  end.parse!

rescue Interrupt
  exit 130
rescue Errno::EPIPE
  exit 0
end
